#include<bits/stdc++.h>
#include<string>
using namespace std;

void reverseStr(string &str){
    int n=str.length();
    for(int i=0;i<n/2;i++){
        swap(str[i] , str[(n-1)-i]);
    }
}

int main(){
    string str;
    cout<<"Enter ur string: ";
    cin>>str;
    
    reverseStr(str);
    
    cout<<str;
}
